<div class="profile-page">
  <div class="profile-infos">
    <div class="profile-picture">
      <%= cl_image_tag current_user.avatar.key, height: 200, width: 200, crop: :fill, class: "picture" %>
    </div>
    <div class="profile-name">
      <h1 class="name"> <%= current_user.first_name %> <%= current_user.last_name %> </h1>
    </div>
  </div>
  <div class="container-annonces">
    <div class="button-annonce">
      <%= link_to "Gérer mes annonces", owner_camping_cars_path, class: "demande-reservation-button btn btn-light-blue btn-md" %>
      <%= link_to "Créer une annonce", new_owner_camping_car_path, class: "demande-reservation-button btn btn-light-blue btn-md" %>
    </div>
  </div>
    <h3 class="text-annonces">Mes locations:</h3>
    <div class="container-cards-location">
      <div class="location-card">
        <% @bookings.each do |booking| %>
            <%= cl_image_tag booking.camping_car.photo.key, height: 200, width: 200, crop: :fill, class: "photo-reservation" %>
            <div class="description-reservation">
              <h4> <%= booking.camping_car.brand %> </h4>
              <%= booking.total_price %>
              <p> Loué du <%= booking.start_date %> jusqu'au : <%= booking.end_date %></p>
            </div>
        <% end %>
      </div>
    </div>
  <div class="container-cards-reservation">
    <h3 class="text-annonces">Mes demandes de réservations:</h3>
    <div class="card-reservation">
      <% @reservations.each do |reservation| %>
        <% if reservation.status == "Pending" %>
            <%= cl_image_tag reservation.user.avatar.key, height: 80, width: 80, crop: :fill, class: "photo-reservation" %>
          <div class="description-reservation">
            <h5> Bonjour, je suis intéressé pour louer votre bien du <%= reservation.start_date.strftime("%d %B %Y")  %> jusqu'au :<%= reservation.end_date.strftime("%d %B %Y")  %></h5>
          </div>
          <div class="buttom-reservation">
            <%= link_to "Accepter", accept_owner_booking_path(reservation), method: :patch, class: "demande-reservation-button btn btn-light-blue btn-md" %>
            <%= link_to "Refuser", deny_owner_booking_path(reservation), method: :patch, class: "demande-reservation-button btn btn-light-blue btn-md" %>
          </div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>


