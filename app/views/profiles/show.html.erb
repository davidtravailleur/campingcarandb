<div class="profile-page">
  <div class="profile-infos">
    <div class="profile-picture">
      <%= cl_image_tag current_user.avatar.key, height: 200, width: 200, crop: :fill, class: "picture" %>
    </div>
    <div class="profile-name">
      <h1 class="name"> <%= current_user.first_name %> <%= current_user.last_name %> </h1>
    </div>
  </div>
  <div class="container-annonces">
    <div class="button-annonce">
      <%= link_to "Gérer mes annonces", owner_camping_cars_path, class: "demande-reservation-button btn btn-light-blue btn-md" %>
      <%= link_to "Créer une annonce", new_owner_camping_car_path, class: "demande-reservation-button btn btn-light-blue btn-md" %>
    </div>
  </div>
  <h3 class="text-annonces">Mes réservations :</h3>
  <div class="container-cards">
    <div class="card-rent">
    </div>
    <div class="card-to-rent">

    </div>
  </div>
</div>


