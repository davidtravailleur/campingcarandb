<div class="show-campingcars">
 <div class="cards-show">
    <div class="card-camping-car">
      <%= cl_image_tag @camping_car.photo.key, width: 600, height: 400, crop: :fill %>
      <div class="card-campingcar-trip-infos">
        <h2> <%= @camping_car.title %> </h2>
        <div class="campingcars-infos">
          <div class="campingcars-label">
            <ul>
              <li class="campingcars-categories"><i class="fas fa-caravan"></i> <%= @camping_car.category %></li>
              <li class="campingcars-categories"><i class="fas fa-tags"></i> <%= @camping_car.brand %></li>
              </ul>
          </div>
          <div class="campingcars-label">
            <ul>
              <li class="campingcars-categories"><i class="fas fa-bed"></i> <%= @camping_car.sleeps_capacity %></li>
              <li class="campingcars-categories"><i class="fas fa-map-marked-alt"></i> <%= @camping_car.location %></li>
            </ul>
          </div>
        </div>
        <p> <%= @camping_car.description %> </p>
      </div>
    </div>
    <div class="card-booking-infos" >
    <div class="form-date-pick">
      <label for="start">Start date:</label>
      <input type="date" id="start" name="trip-start"
             value="2020-11-25"
             min="2020-11-25" max="2021-11-25">
      <label for="end">End date:</label>
      <input type="date" id="end" name="trip-end"
             value="2020-11-25"
             min="2020-11-26" max="2021-11-26">
    </div>
